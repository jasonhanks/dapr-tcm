    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: backend",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/backend",
            "program": "main.py",
            "console": "internalConsole",
            "justMyCode": true
        },
        {
            "name": "NPM: frontend",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "start"
            ],
            "cwd": "${workspaceFolder}/frontend",
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        }
    ]
}